# Google Cloud Configuration
PROJECT_ID=your-gcp-project-id
LOCATION=us-central1
REGION=us-central1

# Vertex AI Configuration
GEMINI_MODEL=gemini-2.5-flash-preview-5-20
VERTEX_AI_ENDPOINT=us-central1-aiplatform.googleapis.com

# Agent Configuration
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=8192
DEFAULT_TOP_P=0.95
DEFAULT_TOP_K=40

# API Keys (if using direct API access)
# GOOGLE_API_KEY=your-api-key-here

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development

# Optional: External Services
# SEARCH_API_KEY=your-search-api-key
# SEARCH_ENGINE_ID=your-search-engine-id

# Security
# SECRET_MANAGER_PROJECT_ID=your-project-id
USE_SECRET_MANAGER=false

# Feature Flags
ENABLE_CODE_EXECUTION=true
ENABLE_WEB_SEARCH=true
ENABLE_FILE_OPERATIONS=true
ENABLE_MEMORY_BANK=false

# Performance
MAX_CONCURRENT_AGENTS=5
AGENT_TIMEOUT_SECONDS=300
TOOL_TIMEOUT_SECONDS=60

# Deployment (Cloud Run)
CLOUD_RUN_SERVICE_NAME=ai-agent-system
CLOUD_RUN_MIN_INSTANCES=0
CLOUD_RUN_MAX_INSTANCES=10
CLOUD_RUN_CONCURRENCY=80
CLOUD_RUN_CPU=2
CLOUD_RUN_MEMORY=4Gi

# Monitoring
ENABLE_TRACING=true
ENABLE_METRICS=true
METRICS_PORT=9090
